{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "svelte:default",
    "core:event:default",
    "core:webview:allow-set-webview-zoom",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "http://zombia.io/*"
        }
      ]
    },
    "shell:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "binaries/server",
          "sidecar": true,
          "args": true
        }
      ]
    }
  ]
}
